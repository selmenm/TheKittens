<!-- Off-Canvas Shopping Cart-->
<div class="offcanvas-container is-triggered offcanvas-container-reverse" id="shopping-cart"><span class="offcanvas-close"><i class="fe-icon-x"></i></span>
  <div class="px-4">
    <h6>Your Cart</h6>
    <div class="widget widget-cart pt-2">
      <a class="featured-product" href="shop-single.html"></a>
      <% if user_signed_in? %>
        <% Cart.where(user_id: current_user.id).each do |cartelement| %>
          <div class="featured-product-thumb"><img src="<%= Item.find(cartelement.item_id).image_url %>" alt="Product Image"/></div>
          <div class="featured-product-info">
            <h5 class="featured-product-title"><%= Item.find(cartelement.item_id).title %> </h5>
            <span class="featured-product-price"><%= Item.find(cartelement.item_id).price.to_i %>â‚¬</span>
          </div>
          <span class="remove-product"><i class="fe-icon-x"></i></span>
          <a class="featured-product" href="shop-single.html"></a>
        <% end %>
      <% end %>
        
      <hr class="mt-3 mb-3"><span class="text-sm text-muted">Subtotal:&nbsp;</span>
      <div class="d-flex justify-content-between pt-3">
        <a class="btn btn-primary btn-block btn-sm mr-2" href="cart.html">View Cart</a>
        <a class="btn btn-accent btn-block mt-0 btn-sm" href="checkout-address.html">Checkout</a>
      </div>
    </div>
  </div>
</div>    

