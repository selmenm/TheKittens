<div class="col-md-6">
  <div class="form-group mb-2">
    <label for="account-fn" class="mb-0">Gender</label>
    <%= f.select(:gender, ['Male', 'Female', 'Other'], {}, {:class=>"form-control"}) %>
  </div>
</div>
<div class="col-md-6"></div>
<div class="col-md-6">
  <div class="form-group mb-2">
    <label for="account-fn" class="mb-0">First Name</label>
    <%= f.text_field :first_name, class: "form-control", autofocus: true, autocomplete: "first_name", placeholder: "First Name" %>
  </div>
</div>
<div class="col-md-6">
  <div class="form-group mb-2">
    <label for="account-ln" class="mb-0">Last Name</label>
    <%= f.text_field :last_name, class: "form-control", autocomplete: "last_name", placeholder: "Last Name" %>
  </div>
</div>
<div class="col-md-12">
  <div class="form-group mb-2">
    <label for="account-ln" class="mb-0">Username</label>
    <%= f.text_field :username, class: "form-control", autocomplete: "username", placeholder: "Username" %>
  </div>
</div>
<div class="col-md-12">
  <div class="form-group mb-2">
    <label for="account-phone" class="mb-0">Age</label>
    <%= f.text_field :age, autocomplete: "age", class: "form-control", type: "number", id: "number-input"%>
  </div>
</div>
<div class="col-md-12">
  <div class="form-group mb-2">
    <label for="account-email" class="mb-0">E-mail Address</label>
    <%= f.email_field :email, class: "form-control", autocomplete: "email", placeholder: "Email" %>
  </div>
</div>

