<div class="container mb-3">
  <div class="row">
    <div class="col-md-3 pb-5"></div>
    <div class="col-md-6 pb-5">
      <%= form_for(resource, as: resource_name, class: "needs-validation wizard", url: session_path(resource_name)) do |f| %>
        <div class="wizard-body pt-2">
          <div class="d-sm-flex justify-content-between pb-2"><a class="btn btn-secondary btn-sm btn-block my-2 mr-3" href="#"><i class="fab fa-facebook-f"></i>&nbsp;Login</a><a class="btn btn-secondary btn-sm btn-block my-2 mr-3" href="#"><i class="fab fa-twitter"></i>&nbsp;Login</a><a class="btn btn-secondary btn-sm btn-block my-2 mr-3" href="#"><i class="fab fa-linkedin-in"></i>&nbsp;Login</a></div>
          <hr>
          <h3 class="h5 pt-4 pb-2">Or use the form below</h3>
            <div class="col-12"><%= render "devise/shared/error_messages", resource: resource %></div>
            <div class="input-group form-group">
              <div class="input-group-prepend"><span class="input-group-text"><i class="far fa-envelope"></i></span></div>
              <%= f.text_field :pseudo, autofocus: true, autocomplete: "login", class: "form-control", placeholder: "Email or Username"%>
            </div>
            <div class="input-group form-group">
              <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-lock"></i></span></div>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
            </div>
          <div class="d-flex flex-wrap justify-content-between">
            <div class="custom-control custom-checkbox">
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me, class: "custom-control-input", type: "checkbox" %>
                <label class="custom-control-label" for="remember-me">Remember me</label>
             <% end %>
            </div>
            <%= link_to "Forgot your password?", new_password_path(:user), class: "navi-link" %>
          </div>
        </div>
        <div class="wizard-footer text-right"><%= f.submit "Log in", class: "btn btn-primary"%></div>
        <div class="text-left"><%= link_to "Sign Up", new_user_registration_path, class: "navi-link" %></div>
      <% end %>
    </div>
    <div class="col-md-3 pb-5"></div>
  </div>
</div>